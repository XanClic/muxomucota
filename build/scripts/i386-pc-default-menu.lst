default 0
timeout 8

title Myxomycota
  root (fd0)
  kernel /kernel prime=/init,/bios-console,/mboot-modules
  module /init prime=tty,mboot tty=(tty)/tty0 script=(mboot)/init.conf
  module /bios-console
  module /mboot-modules
  module /init.conf
  module /wait4server
  module /root-mapper
  module /tar
  module /mount

title Erste Festplatte
  rootnoverify (hd0)
  chainloader +1

title Zweite Festplatte
  rootnoverify (hd1)
  chainloader +1
